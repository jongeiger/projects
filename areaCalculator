# -- MODIFIED GREATLY --
import time


program = True

while(program):

    running = True
    print("Welcome to Jon's Area Calculator")
    print("--------------------------------")
    print(
    
        )
    while(running):
        print("Please select a shape:")
        print(
    
            )
        print("1: Rectangle")
        print("2: Circle")
    
        shape = input("> ")
    
        if shape == "1":
            length = float(input("Please enter the length: "))
            width = float(input("Please enter the width: "))
            area = length * width
            print("The area of this rectangle is", area, "units squared.")
            running = False
            
        elif shape == "2":
            radius = float(input("Please enter the radius: "))
            area = 3.14 * (radius ** 2)
            print("The area of this circle is", area, "units squared.")
            running = False
        
        else:
            print("Please enter a valid number (1 or 2).")
    contin = True
    while(contin):
        cont = input("Would you like to continue? <y/n>: ")
        
        if cont == "y":
            print("continuing...")
            time.sleep(1)
            contin = False
        elif cont == "n":
            print("Byee!!")
            contin = False
            program = False
        else:
            print("Please select a valid answer(y/n)")
time.sleep(0.5)
quit()
